<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:padding="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/tipsImg"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            app:viewAspectRatio="2"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipsImg"
            android:layout_marginStart="7dp"
            android:padding="1dp"
            android:singleLine="true"
            android:text="Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/course_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_title"
            android:layout_marginStart="7dp"
            android:padding="1dp"
            android:singleLine="true"
            android:text="Topic"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/organisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_topic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_toLeftOf="@id/course_Author"
            android:padding="1dp"
            android:singleLine="true"
            android:text="Organiasation"
            android:textSize="12sp" />

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_below="@id/course_topic"
            android:padding="1dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/course_Author"
            android:textSize="12sp"
            android:text="Author"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>