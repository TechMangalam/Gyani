<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.course.CourseFragment">

    <ScrollView
        android:id="@+id/scroll_home"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:fillColor="@color/teal_700"
                android:layout_margin="5dp"
                app:pageColor="#00000000"
                app:radius="4dp"
                app:slideInterval="5000"
                app:strokeColor="@color/teal_700"
                app:strokeWidth="2dp"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/trendingCourseCard"
                android:padding="5dp"
                android:layout_below="@id/carouselView"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/dailyYogaTitle"
                        android:text="Trending Courses"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"
                        android:typeface="sans"
                        android:layout_toStartOf="@id/viewAllTrendingTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/viewAllTrendingTv"
                        android:text="View all"
                        android:layout_marginTop="5dp"
                        android:drawableEnd="@drawable/ic_baseline_add_circle_outline_24"
                        android:drawablePadding="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"
                        android:typeface="sans"
                        android:layout_alignBottom="@id/dailyYogaTitle"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dailyYogRecycler"
                        android:layout_below="@id/dailyYogaTitle"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/recentCourseCard"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_below="@id/trendingCourseCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/generalUpcharTitle"
                        android:text="Recently added courses"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"
                        android:typeface="sans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/generalUpcharRecycler"
                        android:layout_below="@id/generalUpcharTitle"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/creativityCourseCard"
                android:padding="5dp"
                android:layout_marginBottom="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_below="@id/recentCourseCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/popularNuskeTitle"
                        android:text="Creativity Courses"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"
                        android:typeface="sans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/popularNuskeRecycler"
                        android:layout_below="@id/popularNuskeTitle"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>



</FrameLayout>